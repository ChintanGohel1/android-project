<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.inch2inch"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.inch2inch.HomeActivity"
            android:label="@string/title_activity_home" >
        </activity>
        <activity
            android:name="com.inch2inch.customer.addCustomer.AddCustomerActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.inch2inch.BillDetailActivity"
            android:label="@string/title_activity_bill_detail" >
        </activity>
        <activity
            android:name="com.inch2inch.customer.viewCustomers.ViewCustomerActivity"
            android:label="@string/title_activity_view_customer" >
        </activity>
        <activity
            android:name="com.inch2inch.fabric.ViewFabricActivity"
            android:label="@string/title_activity_view_fabric" >
        </activity>
        <activity
            android:name="com.inch2inch.generateBill.GenerateBillActivity"
            android:label="@string/title_activity_generate_bill" >
        </activity>
        <activity
            android:name="com.example.inch2inch.LoginActivity"
            android:label="@string/title_activity_login" >
             <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>